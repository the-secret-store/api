{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/"],
			"@controllers/*": ["src/controllers/"],
			"@middlewares/*": ["src/middlewares/"],
			"@models/*": ["src/models/"],
			"@routers/*": ["src/routers/"],
			"@tools/*": ["src/tools/*"],
			"@validation/*": ["src/validation/*"],
			"@controllers": ["src/controllers"],
			"@middlewares": ["src/middlewares"],
			"@models": ["src/models"],
			"@routers": ["src/routers"],
			"@tools": ["src/tools"],
			"@validation": ["src/validation"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"compileOnSave": true
}
